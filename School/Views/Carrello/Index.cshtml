@using School.Data
@using System.Collections.Generic
@{
    ViewData["Title"] = "CARRELLO";
    double totale = 0;
}

@model IEnumerable<CarrelloDataSource>

<div class="container">
    <div class="header">
        <h2>Carrello</h2>
    </div>

    <div class="main">

        @if (Model.Count() == 0)
        {
            <h4>Carrello Vuoto!</h4>
        }
        else
        {
            <table border="1">
                <thead>
                    <tr>
                        <th>Titolo prodotto</th>
                        <th>Descrizione</th>
                        <th>Prezzo</th>
                        <th>Sconto</th>
                        <th>Immagine</th>
                        <th>Quantita'</th>

                    </tr>
                </thead>
                <tbody>
                    

                    <!-- foreach andrebbe qua... -->


                </tbody>
            </table>
            @foreach (var s in Model)
            {
                totale += (s.Prezzo - s.Sconto) * s.Quantita;

                    @s.Titolo
                    @s.Descrizione
                    @s.Prezzo
                    @s.Sconto

                    @if (s.Immagine != null)
                    {
                        <img src="data:image;base64,@System.Convert.ToBase64String(s.Immagine)"
                             width="80" height="80" />
                    }
                    else
                    {
                        <b>NO IMAGE</b>
                    }

                    @s.Quantita


                @using (Html.BeginForm("Update", "Carrello", FormMethod.Post))
                    {
                    <fieldset>
                        <input type="text" name="prodotto" id="prodotto" value="@s.CdProdotto" hidden />
                        <input type="number" name="qta" id="qta" min="0" value="1" />Quantita'
                        <input type="submit" value="Modifica quantita'" />
                    </fieldset>
                }

                @using (Html.BeginForm("Remove", "Carrello", FormMethod.Post))
                {
                    <fieldset>
                        <input type="text" name="prodotto" id="prodotto" value="@s.CdProdotto" hidden />
                        <input type="submit" value="Rimuovi tutti dal carrello" />
                    </fieldset>
                }
            }
            <h4>TOTALE CARRELLO: @totale</h4>

            <input type="button" value="ACQUISTO"
                   onclick="@("window.location.href='" + @Url.Action("Create", "Ordine") + "'");" />

             <input type="button" value="SVUOTA CARRELLO"
                    onclick="@("window.location.href='" + @Url.Action("Empty", "Carrello") + "'");" />
        }
    </div>

    <div class="footer">
        <h6>footer</h6>
    </div>
</div>

