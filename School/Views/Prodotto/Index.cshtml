@using School.Model
@using System.Collections.Generic

<!-- "parametro" Context.Utenti passato dalla view-->
@model IEnumerable<Prodotto>

    @{
    ViewBag.Title = "LISTA PRODOTTI";
    }

    <div class="container">
        <div class="header">
            <h2>Lista Prodotti</h2>
        </div>

        <div class="main">

            <h4>Lista Prodotti</h4>


            <!-- DA PROVARE KENDOGRID -->


            <table border="1">
                <thead>
                    <tr>
                        <th>Titolo</th>
                        <th>Descrizione</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)   //model parametro view
                {
                        <tr>
                            <td>@s.Titolo</td>
                            <td>@s.Descrizione</td>
                        </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="footer">
            <h6>footer</h6>
        </div>
    </div>
