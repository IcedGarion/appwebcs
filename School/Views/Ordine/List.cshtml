@using School.Data
@using System.Collections.Generic
@{
    ViewBag.Title = "LISTA ORDINI";
}

@model IEnumerable<OrdiniDataSource>


    <div class="container">
        <div class="header">
            <h2>Lista Ordini</h2>
        </div>

        <div class="main">

            <h4>Lista Prodotti</h4>

            <table border="1">
                <thead>
                    <tr>
                        <th>Codice ordine</th>
                        <th>Username</th>
                        <th>Titolo prodotto</th>
                        <th>Totale ordine</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.CdOrdine</td>
                            <td>@s.Username</td>
                            <td>@s.Titolo</td>
                            <td>@s.Totale</td>
                        </tr>
                    }
                        
            </tbody>

            </table>
        </div>

        <div class="footer">
            <h6>footer</h6>
        </div>
    </div>

