@{
    ViewData["Title"] = "Nuovo Utente";
}

<div class="container">
    <div class="header">
        <h2>Create</h2>
    </div>

    <div class="main">
        @using (Html.BeginForm("Create", "Utente", FormMethod.Post))
        {
            <fieldset>
                <input type="text" name="user" id="user"/>Username
